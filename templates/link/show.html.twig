{% extends 'base.html.twig' %}

{% block title %}Link{% endblock %}

{% block body %}
<div class="container my-4">
    <h1 class="mb-4">Link</h1>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ link.id }}</td>
            </tr>
            <tr>
                <th scope="row">Name</th>
                <td>{{ link.name }}</td>
            </tr>
            <tr>
                <th scope="row">Url</th>
                <td>{{ link.url }}</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{ link.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center mt-4">
            <a href="{{ path('adminLink_index') }}" class="btn btn-secondary">Back to List</a>
            <div class="d-flex align-items-center">
                <a href="{{ path('app_link_edit', {'id': link.id}) }}" class="btn btn-add">Edit <i class="bi bi-pencil ms-1"></i></a>
                {{ include('link/_delete_form.html.twig') }}
            </div>   
        </div>
{% endblock %}
